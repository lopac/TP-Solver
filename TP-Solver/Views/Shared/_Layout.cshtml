@using System.Web.Optimization
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <!-- Polyfills -->
    <script src="https://unpkg.com/core-js/client/shim.min.js"></script>

    <script src="https://unpkg.com/zone.js@0.8.4?main=browser"></script>
    <script src="https://unpkg.com/systemjs@0.19.39/dist/system.src.js"></script>
    <script src="/Scripts/systemjs.config.js"></script>
    <script>
        System.import('/Scripts/main.js').catch(function(err) { console.error(err); });
    </script>
</head>
<body>
<nav class="navbar navbar-inverse" style="border-radius: 0 !important;">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

            <a class="navbar-brand brand-text" href="@Url.Action("Index", "Home")">
                <span style="float: left; margin-top: -5px;">
                    <img src="/Content/Images/logo.png" width="32"/>
                </span>
                &nbsp;TPSolver
                <span style="clear: both"></span>
            </a>

        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a href="//github.com/lopac">© Antonio Lopac</a>
                </li>
            </ul>
        </div>
    </div>
</nav>
<div class="body-content">
    @RenderBody()
</div>
</body>
</html>